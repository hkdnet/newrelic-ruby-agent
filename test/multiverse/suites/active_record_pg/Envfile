suite_condition('Skip AR for JRuby, initialization fails on GitHub Actions') do
  RUBY_PLATFORM != 'java'
end

ACTIVERECORD_VERSIONS = [
  [nil, 2.7],
  ['7.0.0', 2.7],
  ['6.1.0', 2.5],
  ['6.0.0', 2.5, 2.7],
  ['5.2.0', 2.2, 2.6],
  ['5.1.0', 2.2, 2.5],
  ['5.0.0', 2.2, 2.4],
]

def gem_list(activerecord_version = nil)
  <<-RB
    gem 'activerecord'#{activerecord_version}
    gem 'pg'
    #{ruby3_gem_webrick}
    gem 'rack'
    gem 'minitest', '~> 5.2.3'
  RB
end


