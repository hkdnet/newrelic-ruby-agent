instrumentation_methods :chain, :prepend

GRAPE_VERSIONS = [
  [nil, 2.5],
  ['1.6', 2.5],
  ['1.5.3', 2.4, 3.0],
]

def gem_list(grape_version = nil)
  <<-RB
    gem 'rack'
    gem 'rack-test', '>= 0.8.0'
    gem 'grape'#{grape_version}
    #{ruby3_gem_webrick}
    gem 'activesupport'
  RB
end

create_gemfiles(GRAPE_VERSIONS, gem_list)
