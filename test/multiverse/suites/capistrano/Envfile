suite_condition("Capistrano 3 flaky on JRuby") do
  RUBY_PLATFORM != 'java'
end

CAPISTRANO_VERSIONS = [
  nil,
  '3.17.0'
]

def gem_list(capistrano_version = nil)
  <<-RB
    gem 'sshkit', '1.16.0'
    gem 'rack'
    #{ruby3_gem_webrick}
    gem 'capistrano'#{capistrano_version}
  RB
end

create_gemfiles(CAPISTRANO_VERSIONS, gem_list)
